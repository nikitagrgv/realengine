/////////////////////////////////////////////////////////////////////////////////
#version 330 core

#inout vec4 ioColor;

/////////////////////////////////////////////////////////////////////////////////
#vertex
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aColor;

uniform vec4 uColor;

void main()
{
    gl_Position = vec4(aPos.x, aPos.y, aPos.z, 1.0);
    ioColor = uColor;
}

/////////////////////////////////////////////////////////////////////////////////
#fragment
out vec4 FragColor;

void main()
{
    FragColor = ioColor;
}