/////////////////////////////////////////////////////////////////////////////////
#version 330 core

#inout vec3 ourColor;

/////////////////////////////////////////////////////////////////////////////////
#vertex
layout (location = 0) in vec3 aPos;
// layout (location = 1) in vec3 aColor;

void main()
{
    gl_Position = vec4(aPos.x, aPos.y, aPos.z, 1.0);
    ourColor = aPos;
}

/////////////////////////////////////////////////////////////////////////////////
#fragment
out vec4 FragColor;

void main()
{
    FragColor = vec4(ourColor, 1.0f);
}