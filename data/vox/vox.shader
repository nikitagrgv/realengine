/////////////////////////////////////////////////////////////////////////////////
#inout vec2 ioUV;

/////////////////////////////////////////////////////////////////////////////////
#vertex
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aUV;

uniform mat4 uViewProj;

void main()
{
    vec4 glob_pos = vec4(aPos, 1.0f);
    gl_Position = uViewProj * glob_pos;
    ioUV = aUV;
}

/////////////////////////////////////////////////////////////////////////////////
#fragment
out vec4 FragColor;

uniform sampler2D atlas;

void main()
{
    FragColor = texture(atlas, ioUV);
}